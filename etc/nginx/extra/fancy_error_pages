error_page 400 /error-400-;
location = /error-400- {
    internal;
    default_type text/html;
    return 400 "<!DOCTYPE html>
<html><head>
<title>400 Bad request</title>
</head><body><h1>Bad request</h1>
<p>Your request deemed unacceptable and was not processed.</p>
<hr/>
<address>nginx/$nginx_version server at $host port $server_port</address>
</body></html>";
}

